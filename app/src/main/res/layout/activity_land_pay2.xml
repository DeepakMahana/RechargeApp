<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="pranav_wasnik.wipro.com.recharger.LandlinePaymentS2">

    <TextView
        android:id="@+id/sectionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="Just one last step for giving details"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!--This textview has to be replaced with a custom list item like view-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <include layout="@layout/custom_list_item"/>

    </LinearLayout>

    <EditText
        android:id="@+id/telephoneNumber"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:background="@drawable/boxlike_effect"
        android:inputType="number"
        android:maxLength="11"
        android:paddingLeft="10dp"
        android:hint="Telephone Number"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/intruction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="5dp"
        android:text="Please enter 11 digit vali telephone number with STD code along with Prefix 0. (e.g. 08041149278)" />

    <EditText
        android:id="@+id/paymentAmount"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/boxlike_effect"
        android:maxLength="4"
        android:inputType="number"
        android:paddingLeft="10dp"
        android:hint="AMOUNT" />


    <Button
        android:id="@+id/buttonContinue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:layout_gravity="bottom"
        android:textColor="@color/textColor"
        android:background="@color/colorPrimary"
        android:text="CONTINUE"
        android:textSize="22sp"/>


</LinearLayout>
