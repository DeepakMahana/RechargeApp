<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtDth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter DTH Details"
        android:textSize="30dp"
        android:textColor="#000000"
        android:textAlignment="center"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="60dp" />

    <TextView
        android:id="@+id/sectionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DTH Number"
        android:textSize="25dp"
        android:layout_below="@+id/txtDth"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/dthNumber"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="22sp"
        android:maxLength="11"
        android:inputType="number"
        android:paddingLeft="15dp"
        android:background="@drawable/boxlike_effect"
        android:layout_below="@+id/sectionTitle"
        android:layout_marginTop="5dp"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/serviceprovider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Service Provider"
        android:layout_marginLeft="15dp"
        android:textSize="25dp"
        android:layout_below="@+id/dthNumber"
        android:textStyle="bold"/>


    <Spinner
        android:id="@+id/spinnerCompanyName"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@id/dthNumber"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/boxlike_effect"/>

    <TextView
        android:id="@+id/dthamount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amount"
        android:layout_marginLeft="15dp"
        android:textSize="25dp"
        android:layout_below="@+id/spinnerCompanyName"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/amount"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:paddingLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_margin="10dp"
        android:layout_below="@+id/dthamount"
        android:background="@drawable/boxlike_effect"
        android:inputType="number"/>


    <Button
        android:id="@+id/buttonDone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/amount"
        android:text="Pay"
        android:textSize="22sp"
        android:layout_margin="65dp"
        android:textColor="@color/textColor"
        android:background="@color/colorPrimary"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>

